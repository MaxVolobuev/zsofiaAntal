{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "types": ["node"]
    },
    "include": [
      "tests/**/*.ts",
      "playwright.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }